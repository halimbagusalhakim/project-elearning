{
  "name": "e-learning-sma",
  "version": "1.0.0",
  "description": "E-Learning Platform for SMA (Sekolah Menengah Atas)",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
